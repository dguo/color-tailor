{
    "manifest_version": 2,
    "name": "Color Tailor",
    "version": "0.1.0",
    "author": "Danny Guo",
    "homepage_url": "https://github.com/dguo/color-tailor",
    "applications": {
        "gecko": {
            "id": "@color-tailor"
        }
    },
    "permissions": ["theme"],
    "background": {
        "scripts": ["dist/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["dist/content.js"]
        }
    ]
}
